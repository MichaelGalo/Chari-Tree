// Django User table (built-in)
Table User {
  id integer [primary key]
  username varchar
  email varchar
  password varchar
  // Other fields omitted for brevity
}

// Token table for authentication
Table Token {
  key varchar [primary key]
  user_id integer [ref: - User.id]
  created timestamp
}

// Profile table (extends User)
Table Profile {
  id integer [primary key]
  user_id integer [ref: - User.id]
  annual_income decimal
  philanthropy_percentage decimal
}

// Charity Categories
Table CharityCategory {
  id integer [primary key]
  name varchar
}

// Charity table
Table Charity {
  id integer [primary key]
  name varchar
  category_id integer [ref: > CharityCategory.id]
  description text
  impact_per_dollar decimal
  avg_people_impacted_per_year integer
  created_by integer [ref: > User.id]
  created_at timestamp
  updated_at timestamp
}

// ImpactPlan table
Table ImpactPlan {
  id integer [primary key]
  user_id integer [ref: > User.id]
  charity_id integer [ref: > Charity.id]
  target_amount decimal
  target_date date
  created_at timestamp
  updated_at timestamp
}

// Donation table
Table Donation {
  id integer [primary key]
  user_id integer [ref: > User.id]
  charity_id integer [ref: > Charity.id]
  impact_plan_id integer [ref: > ImpactPlan.id]
  amount decimal
  donation_date date
}

// Tree table
Table Tree {
  id integer [primary key]
  user_id integer [ref: - User.id]
  current_stage varchar
  progress_to_next_stage decimal
}

// Relationships
Ref: Token.user_id - User.id
Ref: Profile.user_id - User.id
Ref: Charity.category_id > CharityCategory.id
Ref: Charity.created_by > User.id
Ref: ImpactPlan.user_id > User.id
Ref: ImpactPlan.charity_id > Charity.id
Ref: Donation.user_id > User.id
Ref: Donation.charity_id > Charity.id
Ref: Donation.impact_plan_id > ImpactPlan.id
Ref: Tree.user_id - User.id